<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yadaniil.app.blogchain">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.yadaniil.app.blogchain.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        
        <activity
            android:name="com.yadaniil.app.blogchain.main.MainActivity"
            android:label="@string/drawer_item_currencies"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.yadaniil.app.blogchain.splash.SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.yadaniil.app.blogchain.mining.MiningActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        
        
