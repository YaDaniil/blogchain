<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/currency_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:id="@+id/item_coin_layout"
    android:paddingEnd="@dimen/half_standard_dimen"
    android:paddingStart="@dimen/half_standard_dimen">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:padding="@dimen/half_standard_dimen"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_coin_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/currency_item_icon_diameter"
            android:layout_height="@dimen/currency_item_icon_diameter"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/item_coin_name"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_coin_icon"
            android:textSize="@dimen/currency_item_symbol_text_size" />

        <TextView
            android:id="@+id/item_coin_algorithm"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_coin_name"
            android:textSize="@dimen/currency_item_name_text_size" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="match_parent"
        android:padding="@dimen/half_standard_dimen">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/difficulty_item"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/item_coin_difficulty"
                    android:gravity="start"
                    android:singleLine="true"
                    android:paddingStart="@dimen/half_standard_dimen"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/half_standard_dimen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/revenue24_item"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/item_coin_revenue24"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:paddingStart="@dimen/half_standard_dimen"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/half_standard_dimen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/profitability_item"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/item_coin_profitability"
                    android:gravity="start"
                    android:singleLine="true"
                    android:paddingStart="@dimen/half_standard_dimen"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/half_standard_dimen" />

                <TextView
                    android:id="@+id/item_coin_equipment_type"
                    android:gravity="center"
                    android:singleLine="true"
                    android:paddingStart="@dimen/half_standard_dimen"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/half_standard_dimen" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>