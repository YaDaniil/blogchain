<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_margin="@dimen/standard_dimen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio_marketcap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/market_cap" />

        <RadioButton
            android:id="@+id/radio_coin_price"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content"
            android:text="@string/coin_price" />

        <RadioButton
            android:id="@+id/radio_alphabetical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/alphabetical" />

        <RadioButton
            android:id="@+id/radio_24hvolume"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content"
            android:text="@string/volume_24h" />

        <RadioButton
            android:id="@+id/radio_winners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/winners_24h" />

        <RadioButton
            android:id="@+id/radio_losers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/losers_24h" />
    </RadioGroup>

</LinearLayout>